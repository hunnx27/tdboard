{[>layout/header]}
<section class="sub-con content user-content">
  <div class="inner">
    <div class="h-120"></div>
    <div class="flex-box align-center justify-center">
      <div class="p-t-96 user-wrap">
        <p class="text-500 text-size-32 text-center m-b-12">
          회원가입
        </p>  
        <p class="text-400 text-size-16 text-center m-b-32">가입 정보를 입력해주세요.</p>
        <div class="login-form flex-box gap-24 flex-wrap">

          <div class="flex-box gap-8 flex-wrap w-full">
            <div id="userIdField" class="textfield flex-1"  data-type="id"  data-status="active" data-size="LG" data-icon="true">
                <input type="text" id="userId" placeholder="아이디를 입력해주세요">
                <p class="error-text">아이디 오류 메시지</p>
            </div>
            <button class="btn btn-type-01 flex-shink w-96 i-h-48" data-status="active">
              <span class="text-500">중복확인</span>
            </button>
          </div>
          <div class="flex-box gap-8 flex-wrap w-full">
            <div id="passwordField" class="textfield flex-1"  data-type="password"  data-status="default" data-size="LG" data-icon="true">
                <input type="password" id="password" placeholder="비밀번호">
                <p class="error-text">오류 메시지</p>
            </div>
          </div>
          <div class="flex-box gap-8 flex-wrap w-full">
            <div id="confirmPasswordField" class="textfield flex-1"  data-type="passwordCheck"  data-status="default" data-size="LG" data-icon="true">
                <input type="password"  id="confirmPassword"  placeholder="비밀번호 확인">
                <p class="error-text">오류 메시지</p>
            </div>
          </div>
          <div class="flex-box gap-8 flex-wrap w-full">
            <button class="btn btn-type-05 flex-shink flex-1 w-96 i-h-48" data-status="active">
              <span class="text-500">남자</span>
            </button>
            <button class="btn btn-type-05 flex-shink flex-1 w-96 i-h-48" data-status="">
              <span class="text-500">여자</span>
            </button>
          </div>
          <div class="flex-box gap-8 flex-wrap w-full">
            <div class="textfield flex-1"  data-type="email"  data-status="default" data-size="LG" data-icon="true">
                <input type="text" id="email"  placeholder="이메일 주소">
                <p class="error-text">이메일 주소 오류 메시지</p>
            </div>
          </div>
          
          <div class="flex-box gap-8 flex-wrap w-full">
            <div class="textfield flex-1"  data-type="phone"  data-status="default" data-size="LG" data-icon="true">
                <input type="tel" placeholder="핸드폰 번호(번호만 입력)" id="phone">
                <p class="error-text">오류 메시지</p>
            </div>
          </div>
          <div class="flex-box gap-8 flex-wrap w-full">
            <div class="select flex-1" aria-label="select" data-size="MD" data-status="active" data-icon="true">
              <button class="select-btn" aria-label="selectValue">
                  <span class="icon-box icon-size-sm icon-birth"></span>
                  <span>
                    생년월일
                  </span>
              </button>
              <div class="option-box" aria-label="option-box">
                <div>
                  <button class="option" aria-label="option">
                      <span>
                          ValueValueValueValueValue
                      </span>
                  </button>
                  <button class="option" aria-label="option">
                      <span>
                          Value
                      </span>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="flex-box gap-8 flex-wrap w-full">
            <div class="select flex-1" aria-label="select" data-size="MD" data-status="" data-icon="true">
              <button class="select-btn" aria-label="selectValue">
                  <span class="icon-box icon-size-sm icon-smile"></span>
                  <span>
                    유입경로
                  </span>
              </button>
              <div class="option-box" aria-label="option-box">
                <div>
                  <button class="option" aria-label="option" disabled>
                      <span>
                          Value
                      </span>
                  </button>
                  <button class="option" aria-label="option" disabled>
                      <span>
                          Value
                      </span>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <button class="btn btn-type-01 w-full btn-size-xxl" disabled>
            <span class="text-700 text-size-16">회원가입</span>
          </button>
        </div>
        
      </div>

    </div>
  </div>
</section>
<script type="module" src="/assets/js/home/auth/join.js"></script>
{[>layout/footer]}