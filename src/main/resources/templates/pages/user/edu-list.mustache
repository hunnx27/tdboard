 {[>layout/header]}

<!--item-wrap-->
<section class="sub-top sub-top-mypage">
  <div class="inner">
      <h2>
          마이페이지
      </h2>
  </div>
</section>
<!--item-wrap-->
<section class="sub-con content user-content">
  <div class="inner">
    <div class="board-tab">
      <ul>
          <li>
              <a href="/user/mypage">
                  <span>
                    개인정보 수정 
                  </span>
              </a>
          </li>
          <li>
              <a href="/user/edu-list" class="on">
                  <span>
                    교육이력
                  </span>
              </a>
          </li>
          <li>
              <a href="/user/share-list" >
                  <span>
                    공유이력(시설/장비)
                  </span>
              </a>
          </li>
          <li>
              <a href="/user/secession" >
                  <span>
                    회원탈퇴
                  </span>
              </a>
          </li>
      </ul>
    </div>
    <div class="table-wrap board-list">
      <p class="user-wrap-title text-500 text-size-24 text-center m-b-12">
        교육이력
      </p>
      <div class="table-head">
          <div class="flex-box  align-center">
              <span id="tableHeadText">
                Total 0건 1 페이지
              </span>
     
          </div>
      </div>
      <div class="table-body">
          <table class="table table-fixed ">
              <thead>
                  <tr>
                      <th class="number">
                          번호
                      </th>
                      <th class="title">
                          교육명
                      </th>
                      <th class="date">
                          신청일
                      </th>
                      <th class="status">
                        예약 상태
                      </th>
                  </tr>
              </thead>
              <tbody id="list-body">
                    <tr>
                        <td colspan="4">등록된 글이 없습니다.</td>
                    </tr>
              </tbody>
          </table>
      </div>
       <div class="table-foot">
            {[>layout/pagination]}
        </div>
    </div>
  </div>
    
</section>
<script id="table-template" type="text/template">
{{#contents}}
    <tr>
        <td>
            <span>
                {{no}}
            </span>
        </td>
        <td class="title">
            <a href="#">
                {{educationName}}
            </a>
        </td>
        <td>
            <span>
                {{createdDateText}}
            </span>
        </td>
        <td>
            <span>
                {{#notApproval}}
                <em class="status-text status-confirm">승인대기</em>
                <!--<em class="status-text status-cancel">취소</em>-->
                <button class="applicationCancelBtn" data-value="{{id}}">취소</button>
                {{/notApproval}}
                {{#approval}}
                <em class="status-text status-confirm-fi">승인완료</em>
                {{/approval}}
                {{#cancelApplication}}
                <em class="status-text status-cancel-fi">취소완료</em>
                {{/cancelApplication}}
                
            </span>
        </td>
    </tr>
{{/contents}}
</script>

<script type="module" src="/assets/js/home/mypage/edu-list.js"></script>
{[>layout/footer]}
