{[>layout/admin-header]}

<div class="admin-con-head">
    <div class="admin-title-wrap">
        <h3>
                <span class="icon-box icon-size-24 icon-admin-server"></span>
            장비관리
        </h3>
        <button class="btn" onClick="location.href='/admin/equipment-create'"> 
            추가
        </button>
    </div>
</div>
<div class="admin-con-body">
            <div class="admin-inner">
              <div class="table-wrap board-list">
                <div class="table-head">
                    <div class="flex-box  align-center">
                        <span id="tableHeadText">
                            Total 0건 1 페이지
                        </span>
               
                    </div>
                </div>
                <div class="table-body">
                    <table class="table table-fixed">
                        <thead>
                            <tr>
                                <th class="td-num">
                                    번호
                                </th>
                                <th class="td-title">
                                  장비명
                                </th>
                                <th class="td-id">
                                  위치
                                </th>
                                <th class="td-btn">
                                    관리
                                </th>
                            </tr>
                        </thead>
                        <tbody id="list-body">
                            <tr>
                                <td colspan="4">등록된 글이 없습니다.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="table-foot">
                    {[>layout/pagination]}
                </div>
              </div>
            </div>
          </div>
<script id="table-template" type="text/template">
{{#contents}}
    <tr>
        <td>
            <span>
               {{no}}
            </span>
        </td>
        <td class="td-title">
            <a href="/admin/equipment-detail/{{id}}" >
            <div class="flex-box gap-24 align-center">
                <img src="{{imageUrl}}" alt="장비 이미지">
                <span>{{name}}</span>
            </div>
            </a>
        </td>
        <td>
            <span>
            {{location}}
            </span>
        </td>
        
        <td>
            <div class="flex-box gap-10 align-center justify-center">
                <button class="modifyBtn btn admin-btn-type-01" data-value="{{id}}">
                    수정
                </button>
                <button class="deleteBtn btn admin-btn-type-02" data-value="{{id}}">
                    삭제
                </button>
            </div>
        </td>
    </tr>
{{/contents}}
</script>

<script type="module" src="/assets/js/admin/equipment/equipment-list.js"></script>

{[>layout/admin-footer]}