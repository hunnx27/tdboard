{[>layout/admin-header]}

<div class="admin-con-head">
    <div class="admin-title-wrap">
        <h3>
            <span class="icon-box icon-size-24 icon-admin-servay"></span>
            설문지
        </h3>
        <button id="surveyCreateBtn" class="btn" > 
            생성
        </button>
    </div>
</div>
<div class="admin-con-body">
    <div class="admin-inner">
        <div class="table-wrap board-list">
            <div class="table-head">
                <div class="flex-box  align-center">
                    <span id="tableHeadText">
                        Total 0건 1 페이지
                    </span>
                </div>
            </div>
            <div class="table-body">
                <table class="table table-fixed ">
                    <thead>
                        <tr>
                            <th class="td-num">
                                번호
                            </th>
                            <th class="td-title">
                                설문지 제목
                            </th>
                            <th class="td-id">
                                URL
                            </th>
                            <th class="td-date">
                                등록일
                            </th>
                            <th class="td-btn">
                                관리
                            </th>
                        </tr>
                    </thead>
                    <tbody id="list-body">
                        <tr>
                            <td colspan="4">등록된 글이 없습니다.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="table-foot">
                {[>layout/pagination]}
            </div>
        </div>
    </div>
</div>
<div id="noti-top-hjcho" data-size="MD" style="display:none">
  <div class="noti-con">
    <div class="noti-head">
      <h1>설문 생성</h1>
      <button id="popupCloseBtn" class="btn btn-icon-only">
        <span class="icon-box icon-size-24 icon-close"></span>
      </button>
    </div>
    <div class="noti-body">
      <div class="noti-body-con">
        <div class="survey-input-wrap">
          <p>제목</p>
          <div class="textfield w-full "  data-type="text"  data-status="default" data-size="MD" data-icon="">
            <input id="name" type="text" placeholder="제목을 입력해주세요." onchange='textfieldChange(this,event)'>
            <p class="error-text"></p>
          </div>
        </div>
        <div class="survey-input-wrap">
          <p>URL</p>
          <div class="textfield w-full "  data-type="text"  data-status="default" data-size="MD" data-icon="">
            <input id="surveyUrl" type="text" placeholder="https://" onchange='textfieldChange(this,event)'>
            <p class="error-text"></p>
          </div>
        </div>
      </div>
    </div>
    <div class="noti-foot">
      <div class="flex-box align-center justify-between gap-20 w-full">
        <button id="cancelBtn" class="btn btn-type-04 flex-1">취소하기</button>
        <button id="saveBtn" class="btn btn-type-03 flex-1" data-value="" disabled>저장하기</button>
      </div>
    </div>
  </div>
</div>
<script id="table-template" type="text/template">
{{#contents}}
    <tr>
        <td>
            <span>
                {{no}}
            </span>
        </td>
        <td class="td-title">
            <a href="#" target="_blank">
                {{name}}
            </a>
        </td>
        <td>
            <a href="{{surveyUrl}}" target="_blank">
            {{surveyUrl}}
            </a>
        </td>
        <td>
            <span>
            {{createdDateText}}
            </span>
        </td>
        <td>
            <div class="flex-box gap-10 align-center justify-center">
             <button class="modifyBtn btn admin-btn-type-01" data-value="{{id}}" data-name="{{name}}" data-url="{{surveyUrl}}">
                수정
            </button>
            <button class="deleteBtn btn admin-btn-type-02" data-value="{{id}}">
                삭제
            </button>
            </div>
        </td>
    </tr>
{{/contents}}
</script>

<script type="module" src="/assets/js/admin/survey/survey-list.js"></script>
{[>layout/admin-footer]}