{[>layout/admin-header]}

<div class="admin-con-head">
    <div class="admin-title-wrap">
        <h3>
            <span class="icon-box icon-size-24 icon-"></span>
            시설관리
        </h3>
    </div>
</div>
<div class="admin-con-body">
    <div class="admin-inner">
        <div class="table-wrap">
        <div class="table-body">
            <table class="admin-table admin-detail">
                <tbody>
                <tr>
                    <th> 
                    <span>시설명</span>
                    </th>
                    <td colspan="3">
                    <div>
                        <div class="textfield w-full "  data-type="text"  data-status="default" data-size="MD" data-icon="">
                        <input id="name" type="text" placeholder="시설명" onchange='textfieldChange(this,event)'>
                        <p class="error-text"></p>
                        </div>
                    </div>
                    </td>
                </tr>
                <tr>
                    <th> 
                    <span>시설내용</span>
                    </th>
                    <td colspan="3">
                    <div>
                        <div id="descriptionField" class=" textfield w-full"  data-type="textarea"  data-status="default" data-size="MD" data-icon="">
                            <div id="description"></div>
                            <p class="error-text"></p>
    <!--                        <textarea id="description" placeholder="강의내용"></textarea>-->
                            <!--
                            <input type="text" placeholder="강의내용" onchange='textfieldChange(this,event)'>
                            <p class="error-text"></p>
                            -->
                        </div>
                    </div>
                    </td>
                </tr>
                <tr>
                    <th class="vertical-t"> 
                    <span>대표 이미지</span>
                    </th>
                    <td colspan="3">
                    <!--
                    <div class="textfield w-full"  data-type="file"  data-status="default" data-size="MD" data-icon="">
                        <input id="file-01" type="file" placeholder="대표 이미지" onchange='textfieldChange(this,event)'>
                        <label for="file-01">
                        Select Files
                        </label>
                        <p class="error-text"></p>
                    </div>
                    -->
                    </td>
                </tr>
                
                </tbody>
            </table>
        </div>
        </div>
        <div class="flex-box justify-center align-center admin-btn-wrap">
        <button class="btn btn-type-04" onClick="history.back()">
            취소하기
        </button>
        <button id="saveBtn" class="btn btn-type-03" >
            수정하기
        </button>
        </div>
    </div>
</div>
     <input type="hidden" id="facilityId" name="facilityId" value="{[id]}" />
<script type="module" src="/assets/js/admin/facility/facility-modify.js"></script>
{[>layout/admin-footer]}