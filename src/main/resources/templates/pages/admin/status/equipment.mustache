{[>layout/admin-header]}

<div class="admin-con-head">
    <div class="admin-title-wrap">
        <h3>
            <span class="icon-box icon-size-24 icon-admin-server"></span>
            장비대여현황
        </h3>
    </div>
</div>
<div class="admin-con-body">
            <div class="admin-inner">
              <div class="table-wrap board-list">
                <div class="table-head">
                    <div class="flex-box  align-center">
                       <span id="tableHeadText">
                            Total 0건 1 페이지
                        </span>
               
                    </div>
                </div>
                <div class="table-body">
                    <table class="table table-fixed ">
                        <thead>
                            <tr>
                                <th class="td-num">
                                    번호
                                </th>
                                <th class="td-name">
                                  이름
                                </th>
                                <th class="td-phone">
                                  연락처
                                </th>
                                <th class="td-title">
                                  장비명
                                </th>
                                 <th class="td-date">
                                  대여일시  
                                </th>
                                <th class="td-date">
                                  신청날짜  
                                </th>
                                <th>
                                    현황
                                </th>
                                <th class="td-btn">
                                    관리
                                </th>
                            </tr>
                        </thead>
                       <tbody id="list-body">
                            <tr>
                                <td colspan="7">등록된 글이 없습니다.</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                 <div class="table-foot">
                    {[>layout/pagination]}
                </div>
              </div>
            </div>
          </div>

<script id="table-template" type="text/template">
{{#contents}}
    <tr>
        <td>
            <span>
               {{no}}
            </span>
        </td>
        <td>
            <span>
            {{userName}}
            </span>
        </td>
        <td>
            <span>
            {{reqPhone}}
            </span>
        </td>
        <td class="td-title">
           {{equipmentName}}
        </td>
        <td>
            <span>
                {{startAtText}} ~ {{endAtText}}
            </span>
        </td>
        <td>
            <span>
                {{createdDateText}}
            </span>
        </td>
        <td>
            <div class="flex-box gap-10 align-center justify-center">
                {{#notApproval}}
                <em class="status-text status-confirm">승인대기</em>
                <!--<em class="status-text status-cancel">취소</em>-->
                {{/notApproval}}
                {{#approval}}
                <em class="status-text status-confirm-fi">승인완료</em>
                {{/approval}}
                {{#cancelApplication}}
                <em class="status-text status-cancel-fi">취소완료</em>
                {{/cancelApplication}}
            </div>
        </td>
        <td>
            <div class="flex-box gap-10 align-center justify-center">
            <button class="confirmBtn btn admin-btn-type-01" data-value="{{id}}">
                승인
            </button>
            <button class="cancelBtn btn admin-btn-type-02" data-value="{{id}}">
                취소
            </button>
            </div>
        </td>
    </tr>
{{/contents}}
</script>

<script type="module" src="/assets/js/admin/status/equipment-list.js"></script>

{[>layout/admin-footer]}